<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="A" Placeholder="A"
                   Keyboard="Numeric"/>

            <Entry x:Name="B" Placeholder="B"
                   Keyboard="Numeric"/>

            <Label x:Name="la"
                   Text="(A+B)^2/2"/>

            <Button Text="Listo"
                    Clicked="Button_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
